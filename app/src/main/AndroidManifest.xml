<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ohiostate.movietrailer">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:name=".TrailerApp" >

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <provider
            android:authorities="com.facebook.app.FacebookContentProvider1209265295786931"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true" />

        <activity
            android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"/>
        <activity
            android:name=".CreateAccountActivity"/>
        <activity
            android:name=".MainMenuActivity"/>
        <activity
            android:name=".ChooseActorsActivity"/>
        <activity
            android:name=".ChooseGenreActivity"/>
        <activity
            android:name=".ProcessingActivity"/>
        <activity
            android:name=".PromptActivity"/>
        <activity
            android:name=".SettingsActivity"/>
        <activity
            android:name=".FacebookActivity"/>
        <activity
            android:name=".NameMovieActivity"/>
        <activity
            android:name=".GalleryActivity"/>
    </application>

</manifest>